package pack2;

public class Bitwise {
	public void bit_and(int x, int y) {
		System.out.println("& opertion: " + (x & y));
	}

	public void bit_or(int x, int y) {
		System.out.println("| operation: " + (x | y));
	}

	public void xor(int x, int y) {
		System.out.println("^ operation: " + (x ^ y));
	}

	public void bit_not(int x, int y) {
		System.out.println("~ operation: " + (~y));
	}

	public void l_shift(int x, int y) {
		System.out.println("<< operation: " + (x << 1));
	}

	public void r_shift(int x, int y) {
		System.out.println(">> operation: " + (x >> 1));
	}
}
